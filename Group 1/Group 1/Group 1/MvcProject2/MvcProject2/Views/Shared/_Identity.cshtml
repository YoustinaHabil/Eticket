@using MvcProject2.Models;
@inject UserManager<ApplicationUser> UserManager; 

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> Log in
    </a>
    <span style="padding: 5px;"></span>

    <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-plus"></i> Register
    </a>
}
else
{

    @*User profile section*@
    <ol style="list-style:none;display:inline-flex ;width :400px;  padding-top: 1.0025rem;">
        
        @*<ul class="dropdown-menu" aria-labelledby="profile-btn">*@
      <li style="    margin-right: 20px;">
            <a class="btn btn-light" style="    width: 100px;" asp-controller="Orders" asp-action="Index">
                    <i class="bi bi-list"></i> Orders
                </a>
     </li style="    margin-right: 20px;">
            @if (User.IsInRole("Admin"))
            {
                <li>
            <a class="btn btn-light" style="    width: 100px;"  asp-controller="Account" asp-action="Users">
                        <i class="bi bi-people"></i> Users
                    </a>
               </li>


            }
            <li>
        <a class="btn btn-outline-success " style=" width: 200px;"  type="button" id="profile-btn" 
                aria-expanded="false">
            <i class="bi bi-person-badge"></i> Hello @UserManager.GetUserName(User)
        </a>
        </li>

        @*</ul>*@
    </ol>
    <span style="padding: 5px;"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0" style="width: 165px; margin-left: 100px;">
            <i class="bi bi-box-arrow-in-right"></i> Log out
        </button>
    </form>
}

