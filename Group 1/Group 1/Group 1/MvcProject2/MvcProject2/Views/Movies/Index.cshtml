@using MvcProject2.Models;
@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}
<head>
	<link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Montserrat:wght@100;400;800&display=swap">
</head>
 
<style>

* {
	box-sizing: border-box;
	padding: 0;
	margin: 0;
}

body {
		background: url('../Images/body-bg.gif');
		font-family: "Roboto", sans-serif;
	
}

.hero-container {
	margin: auto;
	display: flex;
}

#new-content {
		position: absolute;
		top: 0;
	}

.main-container {
	width: 270px;
	height: 580px;
	position: relative;
	margin: 0 20px;
}

.poster-container {
	width: 230px;
	position: absolute;
	top: 0;
	left: 20px;
	z-index: 9999;
}

.poster {
	width: 300px;
    box-shadow: 0 5px 20px 3px rgb(0 0 0 / 60%);
    height: 370px;
    margin-left: 67px;
}

.ticket-container {
	background: #fff;
	width: 500px;
	height: 570px;
	display: flex;
	flex-direction: column;
	align-items: center;
	border-radius: 5px;
	position: absolute;
	top: 20px;
	box-shadow: 0 5px 20px 3px rgba(0, 0, 0, 0.6);
	opacity: 0;
}

.main-container:hover .ticket-container {
	opacity: 1;
	animation: bounceIn 0.9s linear;
}

keyframes bounceIn {
	0%,
	20%,
	40%,
	60%,
	80%,
	to {
		-webkit-animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
		animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
	}
	0% {
		opacity: 0;
		-webkit-transform: scale3d(0.3, 0.3, 0.3);
		transform: scale3d(0.3, 0.3, 0.3);
	}
	20% {
		-webkit-transform: scale3d(1.03, 1.03, 1.03);
		transform: scale3d(1.03, 1.03, 1.03);
	}
	40% {
		-webkit-transform: scale3d(0.9, 0.9, 0.9);
		transform: scale3d(0.9, 0.9, 0.9);
	}
	60% {
		opacity: 1;
		-webkit-transform: scale3d(1.01, 1.01, 1.01);
		transform: scale3d(1.01, 1.01, 1.01);
	}
	80% {
		-webkit-transform: scale3d(0.97, 0.97, 0.97);
		transform: scale3d(0.97, 0.97, 0.97);
	}
	to {
		opacity: 1;
		-webkit-transform: scaleX(1);
		transform: scaleX(1);
	}
}

.ticket__content {
	width: 100%;
	position: absolute;
	bottom: 0;
	text-align: center;
		
	}

.ticket__movie-title {
	
	text-transform: uppercase;
	margin-bottom: 5px;
}

.ticket__movie-slogan {
	color: #999;
	font-size: 0.9rem;
	margin-bottom: 20px;
}



.ticket__buy-btn {
	cursor: pointer;
	width: 100%;
	background: #2f2f2f;
	color: white;
	padding: 15px 0;
	font-size: 1rem;
	font-weight: bold;
	text-transform: uppercase;
	border: 0;
	border-bottom-left-radius: 5px;
	border-bottom-right-radius: 5px;
}

	#disabled {
		cursor: not-allowed;
	}
</style>
<div class="row">

   @foreach (var item in Model)
    {

     <div class="col-md-4 col-xs-6 border-primary mb-3">

                     <div class="col-md-12">

				<div class="hero-container">
		<div class="main-container">
			<div class="poster-container">
				<a href="#"><img src="@item.ImageURL" class="poster" /></a>
			</div>
			<div class="ticket-container">
				<div class="ticket__content">
					<h4 class="ticket__movie-title">  @item.Name
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                       <a class="btn" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>


										<a class="btn" asp-action="Delete" asp-route-id="@item.Id" formnovalidate class="Cancel" onclick="
                                            return confirm('Are you sure you want to delete this movie?')">
											<i class="bi bi-trash"></i>
										</a>
									}
										
                                    </h4>
					<p class="ticket__movie-slogan">
					@item.Description
									<a class="btn " asp-action="Details" asp-route-id="@item.Id">
										<i class="bi bi-eye-fill"></i>
									</a>
								</p>

								
								<p class="card-text ">
									<b>Status: </b>
									@if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
									{
										<span class="badge bg-success text-white">AVAILABLE</span>
									}
									else if (DateTime.Now > item.EndDate)
									{
										<span class="badge bg-danger text-white">EXPIRED</span>
									}
									else
									{
										<span class="badge bg-primary text-white">UPCOMING</span>
									}
									
								</p>
								<p class="card-text">

									<button class="ticket__buy-btn" id="disabled">
                                <a class="btn text-white @((DateTime.Now > item.EndDate) ? "disabled" : "")" 
                                   asp-controller="Orders" 
                                   asp-action="AddItemToShoppingCart" 
                                   asp-route-id="@item.Id">
                                <i class="bi bi-cart-plus"></i>>Buy now (Price @item.Price.ToString("c"))</a></button>
                            </p>
				</div>
			</div>
		</div>
			</div>
			</div>
		</div>

	



    }

    @await Html.PartialAsync("_CreateItem", "Movies") 