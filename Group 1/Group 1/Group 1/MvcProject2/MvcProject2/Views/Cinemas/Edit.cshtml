
@using MvcProject2.Models;
@model Cinema

@{
    ViewData["Title"] = "Update cinema";
}
<head>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Montserrat:wght@100;400;800&display=swap">
</head>
<style>
    body {
        background: url('../Images/body-bg.gif');
        background: black;
        color: white;
    }
</style>
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                
                    <div class="form-group text-center">
                        <img id="CinemaLogoPreview"  class="border-info rounded-circle" style="width: 150px; height:150px" />
                    </div>

                    <div class="form-group d-none">
                       <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" />
                       <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                
                <form asp-action="Edit" asp-controller="Cinemas" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label Picture Image  class="control-label"> Cinema Logo</label>
                        <div class="custom-file">
                            <input asp-for="Logo"  type="file" name="image" id="image" class="form-control" />
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>
                     
                        
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-success float-right">Edit</button>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </form>


            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>

        $(document).ready(function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $("#Logo").val();
        })

        $("#Logo").on("change", function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $(this).val();
        })
    </script>
}